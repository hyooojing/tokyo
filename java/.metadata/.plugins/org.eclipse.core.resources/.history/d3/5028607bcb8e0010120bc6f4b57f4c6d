package ch1;

import java.util.Scanner;

public class Hw2 {

	public static void main(String[] args) {
		
		// 1.비밀번호 맞추기
		String password = "qwer1234";
		
		if (password.equals("qwer1234")) {
			System.out.println("비밀번호가 맞아요!");
		} else {
			System.out.println("비밀번호가 틀렸어요!");
		}
		
		// 2.비밀번호 맞추기 (입력)
		password = "qwer1234";
		Scanner sc = new Scanner(System.in);
		System.out.print("비밀번호를 입력해주세요: ");
		String userPwd = sc.nextLine();
		
		if (userPwd.equals(password)) {
			System.out.println("비밀번호가 맞아요!");
		} else {
			System.out.println("비밀번호가 틀렸어요!");
		}
		
		// 3.좋아하는 동물 찾기
		String animal = "강아지";
		
		if (animal.equals("강아지")) {
			System.out.println("멍멍!");
		} else if (animal.equals("고양이")) {
			System.out.println("야옹!");
		} else {
			System.out.println("무슨 동물이야?");

		}
		
		// 4.좋아하는 동물 찾기 (입력)
		animal = sc.nextLine();
		if (animal.equals("강아지")) {
			System.out.println("멍멍!");
		} else if (animal.equals("고양이")) {
			System.out.println("야옹!");
		} else {
			System.out.println("무슨 동물이야?");

		}
		
		// 5.주말 맞추기
		int day = 6;
		if (day == 6 || day == 0) {
			System.out.println("주말이야!");
		} else {
			System.out.println("평일이야!");
		}
		
		// 6.주말 맞추기 (입력)
		day = sc.nextInt();
		
	}

}
