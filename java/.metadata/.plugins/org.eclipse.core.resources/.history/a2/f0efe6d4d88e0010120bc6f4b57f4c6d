package ch1;

import java.util.Scanner;

public class Hw2 {

	public static void main(String[] args) {
		
		// 1.비밀번호 맞추기
		String password = "qwer1234";
		
		if (password.equals("qwer1234")) {
			System.out.println("비밀번호가 맞아요!");
		} else {
			System.out.println("비밀번호가 틀렸어요!");
		}
		
		// 2.비밀번호 맞추기 (입력)
		password = "qwer1234";
		Scanner sc = new Scanner(System.in);
		System.out.print("비밀번호를 입력해주세요: ");
		String userPwd = sc.nextLine();
		
		if (userPwd.equals(password)) {
			System.out.println("비밀번호가 맞아요!");
		} else {
			System.out.println("비밀번호가 틀렸어요!");
		}
		
		// 3.좋아하는 동물 찾기
		String animal = "강아지";
		
		if (animal.equals("강아지")) {
			System.out.println("멍멍!");
		} else if (animal.equals("고양이")) {
			System.out.println("야옹!");
		} else {
			System.out.println("무슨 동물이야?");

		}
		
		// 4.좋아하는 동물 찾기 (입력)
		System.out.print("동물을 입력해주세요: ");
		animal = sc.nextLine();
		if (animal.equals("강아지")) {
			System.out.println("멍멍!");
		} else if (animal.equals("고양이")) {
			System.out.println("야옹!");
		} else {
			System.out.println("무슨 동물이야?");

		}
		
		// 5.주말 맞추기
		int day = 6;
		if (day == 6 || day == 0) {
			System.out.println("주말이야!");
		} else {
			System.out.println("평일이야!");
		}
		
		// 6.주말 맞추기 (입력)
		System.out.print("날짜를 입력해주세요: ");
		day = sc.nextInt();
		if (day == 6 || day == 0) {
			System.out.println("주말이야!");
		} else {
			System.out.println("평일이야!");
		}
		
		// 7.나이 검사기
		System.out.print("나이를 입력해주세요: ");
		int age = sc.nextInt();
		
		if (age >= 19) {
			System.out.println("성인입니다.");
		} else {
			System.out.println("미성년입니다.");
		}
		
		// 8.카페인 섭취에 따른 내 상태
		System.out.print("오늘 마신 커피 수를 입력하세요: ");
		int coffee = sc.nextInt();
		if (coffee == 0) {
			System.out.println("여긴 어디? 😵");
		} else if (coffee >= 1) {
			System.out.println("완전 맑은 정신~ 🍀");
		} else if (coffee >= 3) {
			System.out.println("기분 좋은 상태! 😄");
		}
		
		// 9.
	}

}
