package ch1;

/*
	조건문이란?
	조건이 참이면 실행

	if(조건) {
		실행문
	}
 */

public class Control1 {

	public static void main(String[] args) {

		// if문
		if (true) {
			System.out.println("참입니다");
		}

		// if-else문
		if (10 > 20) {
			System.out.println("10은 20보다 큽니다");
		} else { 
			// 위의 조건을 만족하지 않으면 무조건 출력
			System.out.println("10은 20보다 작습니다");
		}
		
		// if-else if-else
		int score = 99;
		if (score >= 90) {	// 이 조건이 참이면 아래 구문 실행
			System.out.println("90점 이상");
		} else if (score >= 80) {	// 이 조건이 참이면 실행
			System.out.println("80점 이상");
		} else {	// 위의 조건을 모두 만족시키지 못하면 아래 구문 실행
			System.out.println("80점 미만입니다.");
		}
		
	}

}
