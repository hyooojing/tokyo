package ch1;

public class Hw1 {

	public static void main(String[] args) {

		int apple = 12;
		System.out.println("apple: " + apple);
		int year = 2025;
		System.out.println("year: " + year);
		int money = -1000;
		System.out.println("money: " + money);
		double length = 9.8;
		System.out.println("length: " + length);
		double score = 88.5;
		System.out.println("score: " + score);
		double minusValue = -4.6;
		System.out.println("minusValue: " + minusValue);
		String food = "떡볶이";
		System.out.println("food: " + food);
		String city = "서울";
		System.out.println("city: " + city);
		String hobby = "코딩";
		System.out.println("hobby: " + hobby);
		boolean hasCar = false;
		System.out.println("hasCar: " + hasCar);
		boolean isStudent = true;
		System.out.println("isStudent: " + isStudent);
		boolean isWeekend = false;
		System.out.println("isWeekend: " + isWeekend);
		
		int a = 10;
		int b = 3;
		System.out.println("a + b = " + (a + b));
		System.out.println("a - b = " + (a - b));
		System.out.println("a * b = " + (a * b));
		System.out.println("a / b = " + (a / b));
		System.out.println("a % b = " + (a % b));

		int sum = 12 + 8;
		System.out.println("sum: " + sum);
		int total = 20 / 3;
		System.out.println("total: " + total);
		int mod = 14 % 5;
		System.out.println("mod: " + mod);
		
		//	5. 5 % 5 의 결과를 도출하는 과정 서술(왜 그런 결과값을 가지는가에 대해)
		//	5 / 5의 몫이 1이고 나머지가 0이므로 %의 결과에 대해서는 해당 연산의 나머지 값인 0
		System.out.println("5 % 5 = " + (5 % 5));	
		
		//	6. 5 % 4 의 결과를 도출하는 과정 서술(왜 그런 결과값을 가지는가에 대해)
		//	5 / 4의 몫은 1이고 나머지가 1이므로 %의 결과는 1
		System.out.println("5 % 4 = " + (5 % 4));	
		
		//	7. 5 % 3 의 결과를 도출하는 과정 서술(왜 그런 결과값을 가지는가에 대해)
		//	5 / 3의 몫은 1이고 나머지가 2이므로 %의 결과는 2
		System.out.println("5 % 3 = " + (5 % 3));	
		
		//	8. 5 % 2 의 결과를 도출하는 과정 서술(왜 그런 결과값을 가지는가에 대해)
		//	5 / 2의 몫은 2이고 나머지가 1이므로 %의 결과는 1
		System.out.println("5 % 2 = " + (5 % 2));	
		
		//	9. 5 % 1 의 결과를 도출하는 과정 서술(왜 그런 결과값을 가지는가에 대해)
		//	5 / 1의 몫은 5이고 나머지가 0이므로 %의 결과는 0
		System.out.println("5 % 1 = " + (5 % 1));	
		
		//	10. 5 % 7 의 결과를 도출하는 과정 서술(왜 그런 결과값을 가지는가에 대해)
		//	5 / 7의 몫은 0이고 나머지가 5이므로 %의 결과는 5, 나누는 값이 더 크면 나눠지는 값이 나머지
		System.out.println("5 % 7 = " + (5 % 7));	
		
		//	11. 5 % 0 의 결과를 도출하는 과정 서술(왜 그런 결과값을 가지는가에 대해)
		//	0을 연산하면 오류 발생
		//	System.out.println("5 % 0 = " + (5 % 0));		
		
		boolean result1 = 15 > 20;
		System.out.println("result1 = " + result1);
		boolean result2 = 10 == 10;
		System.out.println("result2 = " + result2);
		boolean result3 = 7 >= 3;
		System.out.println("result3 = " + result3);

		// 위에서 같은 이름의 변수 a와 b를 사용했기 때문에 선언 불가 -> 기존 값 변경
		a = 5;
		b = 7;
		System.out.println("a > b = " + (a > b));
		System.out.println("a < b = " + (a < b));
		System.out.println("a >= b = " + (a >= b));
		System.out.println("a <= b = " + (a <= b));
		System.out.println("a == b = " + (a == b));
		System.out.println("a != b = " + (a != b));

		boolean logic1 = (10 > 5) && (2 > 1);
		System.out.println("logic1: " + logic1);
		boolean logic2 = (3 == 7) || (6 < 2);
		System.out.println("logic2: " + logic2);
		boolean logic3 = 8 != 8;
		System.out.println("logic3: " + logic3);

		boolean x = true;
		boolean y = false;
		System.out.println("x && y = " + (x && y));
		System.out.println("x || y = " + (x || y));
		System.out.println("!x = " + !x);
		System.out.println("!y = " + !y);

	}

}
