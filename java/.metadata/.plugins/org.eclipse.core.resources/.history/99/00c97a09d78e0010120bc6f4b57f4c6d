package ch1;

import java.util.Scanner;

/*
	switch(key) {
		case value: {
			실행문;
			break;	// 이 키워드를 만나는 즉시 구문을 벗어
		}
		case value: {
			실행문;
			break;
		}
		default: {
			실행문;
			== else와 동일
		}
	}
 */

public class Control3 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		System.out.print("요일을 입력해 주세요(0-6): ");
		int day = sc.nextInt();
		String result = "";
		
		if(day >= 0 && day <= 6) {
			switch(day) {
				case 0: 
					result = "일";
					break;
				case 1: 
					result = "화";
					break;
				case 2:
					result = "수";
					break;
				case 3:
					result = "목";
					break;
				case 4: 
					result = "금";
					break;
				case 5: 
					result = "토";
					break;
				case 6:
					result = "일";
					break;
				default:
					System.out.println("정해진 숫자만 입력하세요.");
			}
			if (day >= 0 && day <= 6)
				System.out.println("오늘은 " + result + "요일입니다.");
		}
	}

}
