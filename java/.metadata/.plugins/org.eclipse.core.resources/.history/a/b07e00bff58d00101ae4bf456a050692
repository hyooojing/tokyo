package ch1;

/*
 	변수란?
 	데이터를 저장하는 그릇
 	다양한 데이터를 담을 수 있음
 	
 	자료형이란?
 	데이터 타입은 변수에 담을 값의 종류
 	
 */

public class Basic2 {

	public static void main(String[] args) {
		
		// int : 정수
		int age = 20;
		System.out.println(30);
		System.out.println(age);
		System.out.println("age");
		System.out.println("========");
		
		// double : 실수
		double weight = 42.1234;
		System.out.println(weight);
		System.out.println("========");
		
		// String : 문자열
		String name = "한라봉";
		System.out.println(name);
		System.out.println("name");
		System.out.println("========");
		
		// boolean : 참/거짓(true, false)
		boolean isPretty = true;
		boolean isUgly = false;
		System.out.println(isPretty);
		System.out.println(isUgly);
		
	}

}
